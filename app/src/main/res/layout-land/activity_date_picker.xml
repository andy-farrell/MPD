    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainScreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <include
            layout="@layout/nav_action_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andrew Farrell - S1511335"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/feedBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:textColor="#FF4500"
            android:layout_margin="10dp"
            android:bottomRightRadius="5dp"
            android:bottomLeftRadius="5dp"
            android:topRightRadius="5dp"
            android:topLeftRadius="5dp"
            android:text="Search" />


        <TextView
            android:id="@+id/txtVw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Largest Magnitude:"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ListView
            android:id="@+id/largestMag"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/deptxtVw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Largest Depth:"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ListView
            android:id="@+id/largestDep"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ListView
            android:id="@+id/incidentList"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />



    </LinearLayout>
    <!--

        </android.support.v4.widget.DrawerLayout>

    -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/screen2"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <include
                layout="@layout/nav_action_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Andrew Farrell - S1511335"
                android:textAlignment="center"
                android:textSize="10sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/s2title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/s2desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="15sp">
            </TextView>

            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_main_layout_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/map"
                    tools:context=".MapsActivity"
                    android:name="com.google.android.gms.maps.SupportMapFragment" />
            </FrameLayout>

            <TextView
                android:id="@+id/s2date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic">

            </TextView>


        </LinearLayout>
    </ScrollView>

</ViewSwitcher>